extends ../../layout.jade
block contenido
	div(class="col-md-6 remove-float center-block  big-top-space")
		h1 Subir nueva imagen
		form(action="/app/imagenes/#{imagen._id}?_method=PUT", method="POST")
			div(class="form-group col-lg-12")
				label(for="title") Titulo
				input(type="text", name="title", placeholder="Titulo de la imagen..,", id="title", class="form-control", value="#{imagen.title}")
			div(class="row")
				div(class="col-xs-12 col-sm-6")
					<br>
					input(type="submit" name="" class="btn btn-info" value="Guardar")